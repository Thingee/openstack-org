<h2>Case Studies</h2>
<div class="item-list">
	<% loop LatestCases %>
	<div class="item row">
		<div class="col-sm-4 col-md-3">
			$Preview
		</div>
		<div class="col-sm-8 col-md-9 item-content">
			<a rel="nofollow" href="$Link">$Name</a>
